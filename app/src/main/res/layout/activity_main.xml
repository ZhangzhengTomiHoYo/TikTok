<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 顶部导航栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#000000">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="8dp"
            app:srcCompat="@android:drawable/arrow_up_float" />

        <TextView
            android:id="@+id/tv_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="预览"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>

    <!-- 主要内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ================= 修改开始 ================= -->
            <!-- 封面图编辑区域 -->
            <!-- 1. 高度改为 wrap_content，去除多余空白，让下方内容上移 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"> <!-- 增加一点下边距，与图片选择区隔开 -->

                <!-- 封面图 -->
                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="120dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:background="#333333"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />

                <!-- 编辑按钮 -->
                <!-- 2. layout_alignBottom: 让按钮底部与图片底部对齐，实现堆叠 -->
                <!-- 3. 去掉了 layout_below 和 layout_marginTop -->
                <!-- 将 Button 改为 TextView，完美解决文字显示不全问题 -->
                <TextView
                    android:id="@+id/btn_edit_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignBottom="@id/iv_cover"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:background="#CC4CAF50"
                    android:text="编辑封面"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:paddingHorizontal="12dp" />
                <!-- 注：#CC4CAF50 是带一点透明度的绿色，看起来更像浮层 -->
            </RelativeLayout>
            <!-- ================= 修改结束 ================= -->

            <!-- 图片选择区域 -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <LinearLayout
                    android:id="@+id/ll_image_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!-- 添加图片按钮 -->
                    <Button
                        android:id="@+id/btn_add_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="12dp"
                        android:background="#333333"
                        android:text="+"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- 文案编辑区域 -->
            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@null"
                android:hint="添加标题"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="4dp"
                android:background="@null"
                android:gravity="top"
                android:hint="添加作品描述..."
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:textSize="16sp" />

            <!-- 字数统计显示 -->
            <TextView
                android:id="@+id/tv_word_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:gravity="right"
                android:text="0/200"
                android:textColor="#888888"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <!-- 话题标签区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/tv_topics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="# 话题"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:background="#333333"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:id="@+id/at_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@ 朋友"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:background="#333333" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_topics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal"
                android:scrollbars="horizontal">
            </LinearLayout>

            <!-- 热门话题区域 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="热门话题"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="12dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_hot_topics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- 这里的内容会由 Java 代码动态填充 -->
                </LinearLayout>

            </HorizontalScrollView>

            <!-- 分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginVertical="12dp" />

            <!-- 位置信息区域 -->
            <LinearLayout
                android:id="@+id/ll_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="8dp"
                    app:srcCompat="@android:drawable/ic_menu_mylocation" />

                <ImageView
                    android:id="@+id/iv_clear_location"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    app:srcCompat="@android:drawable/ic_menu_delete" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="正在获取位置信息..."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 添加标签区域 -->
            <LinearLayout
                android:id="@+id/ll_add_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="添加标签"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@android:drawable/arrow_up_float" />
            </LinearLayout>

            <!-- 隐私设置区域 -->
            <LinearLayout
                android:id="@+id/ll_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="公开 · 所有人可见"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@android:drawable/arrow_up_float" />
            </LinearLayout>

            <!-- 高级设置区域 -->
            <LinearLayout
                android:id="@+id/ll_advanced_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="高级设置"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@android:drawable/arrow_up_float" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 底部操作栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#000000"
        android:padding="12dp">

        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#333333"
            android:drawableLeft="@android:drawable/ic_menu_share"
            android:drawablePadding="4dp"
            android:text="分享"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_publish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#FF0050"
            android:text="发作品"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>